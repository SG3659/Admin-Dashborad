generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      String   @default("ADMIN") // USER, ADMIN
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

model Car {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  make        String
  model       String
  year        Int
  pricePerDay Float
  location    String
  imageUrl    String
  status      Status     @default(PENDING)
  reviewedBy  String?
  reviewedAt  DateTime?  @default(now())
  submittedAt  DateTime @default(now())
  features    String[]
  audit       AuditLog[]

  @@map("cars")
}

enum Action {
  APPROVED
  REJECTED
  EDIT
}

model AuditLog {
  id        Int    @id @default(autoincrement())
  action    Action?
  adminEmail String
  car_id    Int
  car       Car    @relation(fields: [car_id], references: [id], onDelete: Cascade)
  submittedAt  DateTime @default(now())
}
